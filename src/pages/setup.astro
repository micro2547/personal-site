<style lang="scss" is:global>
    main {
        display: flex;
        flex-direction: row;
        gap: 25px;
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .pfpContainer {
        flex: 1 1;
        display: flex;
        flex-direction: column;
        align-items: center;

        & > * {
            flex: 0 0;
        }

        & > address {
            width: 100%;
            //max-width: 350px;
        }

        #pfp {
            --pfp-size: 200px;

            width: var(--pfp-size);
            height: auto;
            aspect-ratio: 1 / 1;
            border-radius: var(--pfp-size);
            border: 5px solid var(--acc);
            box-shadow: 0 0 10px var(--acc); // glow!!! :3
        }

        address {
            margin-top: 15px;
        }
    }

    .mainContent {
        flex: 1 1 400px;
    }
</style>

